<!-- We don't need full layout in this file because this page will be parsed with Ajax. It is just enough to put here .navbar and .page-->

<!-- Top Navbar-->
<div class="navbar bg-yellow">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link color-white">
                返回
            </a>
        </div>
        <div class="center sliding"><%=title%></div>
        <div class="right">
            <a href="#" class="link icon-only scanner"><i class="ion-qr-scanner color-white"></i></a>
        </div>
    </div>
</div>

<div class="pages navbar-through">
    <div data-page="list" class="page">
        <div class="page-content">
            <div class="list-block media-list">
                <ul>
                    <%product.products.forEach(function(p){%>
                    <li>
                        <a href="/product?id=<%=p._id%>" class="item-link item-content">
                            <div class="item-media">
                                <img src="<%=p.images.length>0?p.images[0].url:''%>" alt="product" />
                            </div>
                            <div class="item-inner">
                                <div class="item-title"><%=p.name%></div>
                                <div class="item-text"><%=p.introduction%></div>
                                <div class="item-subtitle color-orange">￥<%=p.price%></div>
                            </div>
                        </a>
                    </li>
                    <%});%>
                </ul>
            </div>
        </div>
    </div>
</div>